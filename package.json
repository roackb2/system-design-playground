{
  "name": "system-design-playground",
  "version": "1.0.0",
  "description": "Playground to put random things here when learning system design",
  "license": "ISC",
  "author": "Jay / Fienna Liang (roackb2@gmail.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/roackb2/system-design-playground"
  },
  "type": "commonjs",
  "scripts": {
    "dev": "tsx watch src/server.ts | pino-pretty",
    "docker:build:dev": "docker build -f dev.Dockerfile -t system-design-playground:dev .",
    "docker:run:dev": "docker run --name sdp-dev --rm -it -p 3300:3300 --env PORT=3300 --env CHOKIDAR_USEPOLLING=true --mount type=bind,source=$(pwd),target=/app --mount type=volume,source=system-design-playground_node_modules,target=/app/node_modules system-design-playground:dev",
    "docker:run:worker:onboarding:dev": "docker run --name sdp-worker-dev --rm -it --env CHOKIDAR_USEPOLLING=true --mount type=bind,source=$(pwd),target=/app --mount type=volume,source=system-design-playground_node_modules,target=/app/node_modules system-design-playground:dev yarn worker:onboarding:dev",
    "dev:docker": "yarn docker:build:dev && yarn docker:run:dev",
    "dev:docker:worker:onboarding": "yarn docker:build:dev && yarn docker:run:worker:onboarding:dev",
    "build": "rm -rf dist && tsc",
    "start": "node dist/src/server.js",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "worker:onboarding:dev": "tsx watch src/workers/onboarding/OnboardingApplicationWorker | pino-pretty",
    "install:k6": "./scripts/build_k6.sh",
    "obs:lgtm:start": "docker compose -f observability/stacks/lgtm/docker-compose.lgtm.yml up -d",
    "obs:lgtm:stop": "docker compose -f observability/stacks/lgtm/docker-compose.lgtm.yml stop",
    "obs:lgtm:restart": "docker compose -f observability/stacks/lgtm/docker-compose.lgtm.yml restart",
    "obs:lgtm:down": "docker compose -f observability/stacks/lgtm/docker-compose.lgtm.yml down",
    "obs:lgtm:destroy": "docker compose -f observability/stacks/lgtm/docker-compose.lgtm.yml down -v",
    "obs:elk:start": "docker compose -f observability/stacks/elk/docker-compose.elk.yml up -d",
    "obs:elk:stop": "docker compose -f observability/stacks/elk/docker-compose.elk.yml stop",
    "obs:elk:restart":  "docker compose -f observability/stacks/elk/docker-compose.elk.yml restart",
    "obs:elk:down": "docker compose -f observability/stacks/elk/docker-compose.elk.yml down",
    "obs:elk:destroy": "docker compose -f observability/stacks/elk/docker-compose.elk.yml down -v",
    "test:load": "K6_PROMETHEUS_RW_SERVER_URL=http://localhost:9091/api/v1/write ./bin/k6 run --out experimental-prometheus-rw tests/load/index.ts"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/k6": "^1.2.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.1.0",
    "drizzle-kit": "^0.31.4",
    "k6": "^0.0.0",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "express": "^5.1.0",
    "lodash": "^4.17.21",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "redis": "^5.6.1",
    "zod": "^4.0.17"
  }
}
